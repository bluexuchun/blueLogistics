/**index.wxss**/
page{
  width:100%;
  height:100%;
  background: #FFFFFF;
}
.search-top{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #FFFFFF;
}
.search-word{
  width:20%;
  display: flex;
  flex-direction: row;
  height:100%;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
}
.search-word image{
  width:30rpx;
  margin-left:6rpx;
}
.search-input{
  width:80%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.search-detail{
  width:90%;
  height:70rpx;
  border-radius: 50px;
  background: #efeff4;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.search-detail image{
  width:40rpx;
  margin-right:8rpx;
}
.search-detail .search-content{
  width:70%;
}
.page__bd{
  margin:8px 0px;
}

.main{
  width:100%;
  height:100%;
  font-size:26rpx;
  overflow: hidden;
  overflow-y: auto;
  background: #F2F7FA;
  -webkit-overflow-scrolling: touch;
}
.weui-search-bar{
  border:none;
}

/* 轮播图 */
.slide-image{
  width:100%;
  height:100%;
}
swiper{
  min-height:300rpx;
}

/*  导航栏  */
.nav{
  padding:15px 0px 5px 0px;
  width:100%;
  background: #FFFFFF;
  /* box-shadow: 0px 1px 3px rgba(0,0,0,0.3); */
}
.nav-content{
  padding:15px 12px 0px 12px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.nav-item{
  width:25%;
  margin:20rpx 0rpx;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.nav-icon{
  
}
.nav-icon-img{
  width:80rpx;
  height:64rpx;
}

.weui-search-bar{
  background: #FFFFFF;
}
.weui-search-bar__form{
  background: #efeff4;
}
.weui-search-bar__label{
  background: #efeff4;
}

/*  热门路线  */
.hotline{
  width:100%;
  background: #F2F7FA;
  /* box-shadow: 0px -1px 4px rgba(0,0,0,0.3); */
  display: flex;
  flex-direction: column;
  align-items: center;
}
.hotline-title{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-top:1px solid rgba(0,0,0,0.1);
  border-bottom:1px solid rgba(0,0,0,0.1);
}
.hotline-icon{
  width:55%;
  height:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.hotline-icon .icon-img{
  width:36rpx;
  margin-right:12rpx;
}
.hotline-word{
  color:#898989;
  font-size:28rpx;
}
.hotline-more{
  width:35%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.hotline-more .icon-more{
  width:20rpx;
}
.hotline-lists{
  width:100%;
  display: flex;
  flex-direction: column;
  background: #F2F7FA;
}
.hotline-item{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding:40rpx 0rpx;
  position:relative;
  background: #FFFFFF;
  margin-bottom:20rpx;
}
.hotline-item-left{
  width:90%;
  height:100%;
  display: flex;
  flex-direction: row;
  position: relative;
}
.hotline-item-left .hotline-img{
  width:35%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.hotline-item-left .hotline-info{
  width:64%;
  height:100%;
  display:flex;
  flex-direction: column;
  justify-content: center;
  position: absolute;
  right:0px;
}
.hotline-info .hotline-direction{
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:36rpx;
}
.hotline-info .hotline-company{
  color:#456286;
  font-size:26rpx;
}
.hotline-info .hotline-position{
  width:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
  padding:16rpx 0rpx;
}
.hotline-position .icon-position{
  width:26rpx;
  margin-right:14rpx;
}
.hotline-position .position-word{
  color:#C2C2C2;
  font-size:24rpx;
  width:80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.hotline-info .hotline-cost{
  width:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
}
.hotline-cost .cost-name{
  font-size:24rpx;
  color:#456286;
}
.hotline-cost .yd{
  color:#D0021B;
  font-size:26rpx;
}
.hotline-cost .yf{
  color:#D0021B;
  font-size:26rpx;
  margin-left:14rpx;
}
.hotline-direction .line{
  height:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin:0rpx 20rpx;
}
.hotline-img image{
  width:200rpx;
  height:200rpx;
  object-fit: cover;
}
.hotline-item-right{
  width:16%;
}
.hotline-icon-phone{
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.hotline-icon-phone image{
  width:60rpx;
}
.hotline-icon-phone .phone-word{
  width:100%;
  text-align: center;
  color:#298CFF;
  font-size:24rpx;
  margin-top:14rpx;
}
.hotline-arrow{
  width:40rpx;
}

/*  商家分类  */
.shopCate{
  width:100%;
  margin-top:30rpx;
  background: #FFFFFF;
  box-shadow: 0px -1px 4px rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
  align-items: flex-end;

} 
.shopCate-content{
  width:95%;
  padding:30rpx 0rpx;
}
.shopCate-scroll{
  white-space: nowrap;
}
.shopCate-scroll-item{
  width: 200px; 
  display: inline-block;
}
.shopCate-scroll-item .shopCate-item-content{
  width:95%;
  display: flex;
  flex-direction: column;
}
.shopCate-item-content image{
  width:100%;
}
.shopCate-item-content .scroll-item-word{
  margin-top:16rpx;
  font-size:26rpx;
  color:#323232;
}

.weui-search-bar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center
}
.weui-search-bar__form{
  width:90%;
}
.location-icon{
  width:10%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.location-icon image{
  width:30rpx;
}
.nav-swiperitem{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.nav-swiper{
  padding:0px 12px 15px 12px;

}
swiper{
  width:100%;
  min-height: auto;
  height:150rpx;
}

/* 推荐企业 */
.recommend{
  width:100%;
  background: #FFFFFF;
  box-sizing: border-box;
  padding:20rpx 12rpx 40rpx;
}
.recommend-title{
  width:100%;
  height:60rpx;
  font-size:30rpx;
  line-height: 60rpx;
  padding:12rpx 0rpx;
  position: relative;
  text-align: center;
  color:#666666;
}
.recommend-title:before{
  content:"";
  width:50rpx;
  height:3rpx;
  background: #666666;
  position: absolute;
  top:50%;
  margin-top:-1.5rpx;
  left:60%;
}
.recommend-title:after{
  content:"";
  width:50rpx;
  height:3rpx;
  background: #666666;
  position: absolute;
  top:50%;
  margin-top:-1.5rpx;
  right:60%;
}
.recommend-content{
  width:100%;
  display: flex;
  flex-direction: row;
}
.recitem{
  width:33.3%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.recimg{
  width:90%;
  box-shadow: 0px 0px 8px rgba(0,0,0,0.7);
  margin:16rpx 0rpx;
}
.hotline-title{
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #FFFFFF;
}
.hotnav{
  width:33.3%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size:30rpx;
  color:#898989;
  height:100%;
  line-height:100rpx;
  text-align: center;
}
.nav-active{
  color:#000000;
  font-weight: 600;
}
.loading{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0);
}
.loading .loading-img{
  width:70rpx;
}