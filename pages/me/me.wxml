<view class="me" style="height:{{mainHeight}}px;">
  
  <view class="me-header">
    <view class="me-ava">
      <image mode='widthFix' class="icon-avatar" src="{{userInfo.avatarUrl}}"></image>
    </view>
    <view class="me-info">
      <view class="me-title">
        <view class="me-name">{{userInfo.nickName}}</view>
      </view>
    </view>
  </view>

  <view class="me-ul">

    <view class="me-item" bindtap='toComfrim'>
      <view class="item-detail">
        <view class="item-icon">
          <image mode='widthFix' src="/resource/images/icon-info.png" class="item-icon-img"></image>
          <view class="item-word">我的公司信息</view>
        </view>
        <view class="item-confrim" style="color:{{status.color}}">{{status.word}}</view>
      </view>
    </view>

    <view class="me-item">
      <view class="item-detail" bindtap='toPublish'>
        <view class="item-icon">
          <image mode='widthFix' src="/resource/images/icon-publish.png" class="item-icon-img"></image>
          <view class="item-word">我的发布</view>
        </view>
        <view class="item-confrim">
          <image class="item-icon-more" mode='widthFix' src="/resource/images/icon-more.png"></image>
        </view>
      </view>
    </view>

  </view>
</view>

<!--  公共底部组件  -->
<common-tabnav tabnavs="{{tabnavs}}"></common-tabnav>
