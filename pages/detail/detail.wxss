.detail{
  width:100%;
}
/* banner */
.detail-banner{
  width:100%;
  position: relative;
}
.slide-image{
  width:100%;
}
.picNum{
  width:170rpx;
  height:80rpx;
  border-radius: 50px;
  position: absolute;
  bottom:80rpx;
  right:28rpx;
  background: rgba(0,0,0,0.4);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
}
.icon-pic{
  width:40rpx;
  margin-right:16rpx;
}
.numContent{
  color:#fff;
  font-size:30rpx;
}

/*  信息  */
.detail-info{
  width:100%;
  background: #F2F2F2;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:30rpx 0rpx;
  position: relative;
}

.detail-logo{
  width:92%;
  background: #fff;
  box-shadow: 0px 3px 6px rgba(0,0,0,0.4);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding:50rpx 0rpx;
  border-radius: 4px;
  margin-top:-100rpx;
  position: absolute;
  top:50rpx;

}
.icon-logo{
  width:100rpx;
  height:100rpx;
  margin-right:16rpx;
}
.detail-companyInfo{
  width:92%;
  background: #fff;
  margin-top:150rpx;
  padding:0rpx 0rpx;
  box-shadow: 0px 2px 5px rgba(0,0,0,0.4);
  border-radius: 4px;
}
.detail-Info{
  width:92%;
  background: #fff;
  margin-top:30rpx;
  padding:0rpx 0rpx;
  box-shadow: 0px 2px 5px rgba(0,0,0,0.4);
  border-radius: 4px;
}
.area{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding:40rpx 0rpx;
}
.area-content{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:34rpx;
  color:#456286;
}
.icon-arrow{
  width:50rpx;
  margin-left:80rpx;
  margin-right:80rpx;
}
.icon-area{
  width:50rpx;
  margin-right:16rpx;
}
.info-list{
  display: flex;
  flex-direction: row;
  padding:36rpx 50rpx;
  align-items: center;
  color:#6B6B6B;
  font-size:32rpx;
  border-top:1px solid #F2F2F2;
}
.info-list-spe{
  display: flex;
  flex-direction: row;
  padding:36rpx 50rpx;
  align-items: center;
  color:#6B6B6B;
  font-size:32rpx;
  border-top:1px solid #F2F2F2;
}
.info-list-spe1{
  width:100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding:36rpx 50rpx;
  align-items: center;
  color:#6B6B6B;
  font-size:32rpx;
  border-top:1px solid #F2F2F2;
}
.info-list-spe2{
  display: flex;
  flex-direction: column;
  align-items: center;
  color:#6B6B6B;
}
.icon-info{
  width:40rpx;
  margin-right:40rpx;
}
.info-item{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.info-item-content{
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:10rpx 0rpx;
}
.info-item-content1{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:10rpx 0rpx;
}
.info-item-label{
  width:100%;
  display: flex;
  flex-direction: row;
}
.info-content{
  width:80%;
  /* overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; */
}
.info-item-content .info-label{
  width:40%;
}
.info-item-content .info-content{
  width:60%;
}
.detail-rich{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.rich-title{
  width:90%;
  padding:30rpx 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color:#898989;
  font-size:32rpx;
  border-bottom:1px solid #F2F2F2;
}
.rich-content{
  box-sizing: border-box;
  padding:12px 24px;
  font-size:28rpx;
}
.info-item-label .info-label {
  width:40%;
}
.info-item-label .info-content {
  width:60%;
}
