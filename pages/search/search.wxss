page{
  width:100%;
  height:100%;
  background: #FFFFFF;
}
/* 头部搜索  */
.search{
  width:100%;
  background: #F2F7FA;
}
.search-header{
  width:100%;
  background: #F2F2F2;
  height:430rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 1px 4px rgba(0,0,0,0.3); 
}
.search-content{
  width:90%;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0px 3px 6px rgba(0,0,0,0.4);
  border-radius: 6px;
}
.search-detail{
  width:90%;
  font-size:36rpx;
  padding:40rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  align-items: center;
  border-bottom:1px solid #F2F2F2;
}
.search-icon{
  width:50rpx;
}
.search-btn{
  width:90%;
  padding:16rpx 0rpx;
  background: #298CFF;
  text-align: center;
  color:#FFFFFF;
  font-size:35rpx;
  border-radius: 50px;
  margin:60rpx 0rpx 80rpx 0rpx;
}

/*  热门路线  */
.search-hotline{
  width:100%;
  margin-top:30rpx;
}
.hotline{
  width:100%;
  background: #FFFFFF;
  box-shadow: 0px -1px 4px rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.hotline-title{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom:1px solid rgba(0,0,0,0.1);
}
.hotline-icon{
  width:55%;
  height:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.hotline-icon .icon-img{
  width:36rpx;
  margin-right:12rpx;
}
.hotline-word{
  color:#898989;
  font-size:28rpx;
}
.hotline-more{
  width:35%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.hotline-more .icon-more{
  width:20rpx;
}
.hotline-lists{
  width:100%;
  display: flex;
  flex-direction: column;
}
.hotline-item{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding:40rpx 0rpx;
  position:relative;
  border-bottom:1px solid rgba(0,0,0,0.1);
}
.hotline-item:after{
  content:'';
  width:1px;
  height:100%;
  background: rgba(0,0,0,0.1);
  position: absolute;
  right:18%;
}
.hotline-item-left{
  width:80%;
  height:100%;
  display: flex;
  flex-direction: row;
  position: relative;
}
.hotline-item-left .hotline-img{
  width:35%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.hotline-item-left .hotline-info{
  width:64%;
  height:100%;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  position: absolute;
  right:0px;
}
.hotline-info .hotline-direction{
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:36rpx;
}
.hotline-info .hotline-company{
  color:#456286;
  font-size:26rpx;
}
.hotline-info .hotline-position{
  width:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
}
.hotline-position .icon-position{
  width:26rpx;
  margin-right:14rpx;
}
.hotline-position .position-word{
  color:#C2C2C2;
  font-size:24rpx;
  width:80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.hotline-info .hotline-cost{
  width:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
}
.hotline-cost .cost-name{
  font-size:24rpx;
  color:#456286;
}
.hotline-cost .yd{
  color:#D0021B;
  font-size:26rpx;
}
.hotline-cost .yf{
  color:#D0021B;
  font-size:26rpx;
  margin-left:14rpx;
}
.hotline-direction .line{
  height:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin:0rpx 20rpx;
}
.hotline-img image{
  width:200rpx;
  height:200rpx;
  object-fit: cover;
}
.hotline-item-right{
  width:16%;
}
.hotline-icon-phone{
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.hotline-icon-phone image{
  width:60rpx;
}
.hotline-icon-phone .phone-word{
  width:100%;
  text-align: center;
  color:#298CFF;
  font-size:24rpx;
  margin-top:14rpx;
}
.hotline-arrow{
  width:40rpx;
}

/*  省市区三级联动  */
.areaContent{
  width:100%;
  position: fixed;
  bottom:-472rpx;
  left:0px;
  background: #FFFFFF;
  z-index:999;
  border-top:1px solid #F2F2F2;
}
.areaTools{
  height:70rpx;
  margin:0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:0rpx 30rpx;
  border-bottom:2rpx solid #F2F2F2;
  font-size:35rpx;
}
.areaTools .confrim{
  color:#298CFF;
}
.upAnimation{
  animation: upAnimate 0.5s ease forwards;
}
.downAnimation{
  animation: downAnimate 0.5s ease forwards;
}
@keyframes upAnimate{
  0%{
    bottom:-472rpx;
  }
  100%{
    bottom:0rpx;
  }
}

@keyframes downAnimate{
  0%{
    bottom:0rpx;
  }
  100%{
    bottom:-472rpx;
  }
}