page{
  background: #fff;
}
.next{
  width:100%;
  background: #fff;
  border-top:1px solid #F2F2F2;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.comfrim-item{
  width:95%;
  min-height:90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom:1px solid #F2F2F2;
}
.comfrim-item-spe{
  width:95%;
  border-bottom:1px solid #F2F2F2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding:30rpx 0rpx;
}
.comfrim-item-spe .comfrim-label{
  width:100%;
  margin-right:0px;
}
.line-lists{
  width:100%;
  box-sizing: border-box;
  padding:16rpx;
  border-radius: 6px;
  font-size:30rpx;
  color:#6B6B6B;
}
.line-item{
  width:100%;
  margin-top:16rpx;
  box-sizing: border-box;
  padding:12rpx 20rpx;
  border:1px solid #F2F2F2;
  border-radius: 8rpx;
}
.line-style{
  width:100%;
  padding:10rpx 0rpx;
  display: flex;
  flex-direction: row;
}
.line-label{
  width:30%;
}
.line-picker{
  width:70%;
}
.line-start{
}
.line-tools{
  width:90%;
  height:80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.tols-add,.tols-delete{
  width:50%;
  height:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size:28rpx;
}
.tols-add image,.tols-delete image{
  width:40rpx;
  margin-right:8rpx;
}
.comfrim-label{
  margin-right:40rpx;
  font-size:30rpx;
  color:#6B6B6B;
}


.btn{
  width:100%;
  padding:30rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btn-detail{
  width:90%;
  background: #298CFF;
  height:80rpx;
  border-radius: 30px;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
}
.comfrim-input{
  font-size:28rpx;
  color:#C3CAD3;
}
.inputPlace{
  font-size:28rpx;
  color:#C3CAD3;
}
.comfrim-textarea{
  width:70%;
  margin: 30rpx 0rpx;
}
textarea{
  width:100%;
}